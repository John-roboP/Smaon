<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.t_robop.smaon.GraphActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/time"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="setLineChartDataTime"
            android:text="時"
            android:textSize="30dp" />

        <Button
            android:id="@+id/current"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="setLineChartDataCurrent"
            android:text="日"
            android:textSize="30dp" />

        <Button
            android:id="@+id/left_move"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="leftMove"
            android:text="←"
            android:textSize="30dp" />

        <Button
            android:id="@+id/right_move"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="rightMove"
            android:text="→"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/moveMain"
            android:onClick="moveMain"
            android:layout_alignParentRight="true"/>


    </LinearLayout>
</LinearLayout>