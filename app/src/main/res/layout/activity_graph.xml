<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4169E1"
    android:orientation="vertical"
    tools:context="com.t_robop.smaon.GraphActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/time"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/waku1"
            android:onClick="setLineChartDataTime"
            android:text="時"
            android:textSize="30dp" />

        <Button
            android:id="@+id/current"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/waku1"
            android:onClick="setLineChartDataCurrent"
            android:text="日"
            android:textSize="30dp" />

        <Button
            android:id="@+id/left_move"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/waku1"
            android:onClick="leftMove"
            android:text="←"
            android:textSize="30dp" />

        <Button
            android:id="@+id/right_move"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/waku1"
            android:onClick="rightMove"
            android:text="→"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>