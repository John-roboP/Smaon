<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.t_robop.smaon.GraphActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_margin="16dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/current"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="createLineChartDataCurrent"
            android:text="今"
            android:textSize="30dp" />

        <Button
            android:id="@+id/month"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="createLineChartDataMonth"
            android:text="月"
            android:textSize="30dp" />

        <Button
            android:id="@+id/year"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="createLineChartDataYear"
            android:text="年"
            android:textSize="30dp" />

        <Button
            android:id="@+id/left_move"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="createLeft_move"
            android:text="←"
            android:textSize="30dp" />

        <Button
            android:id="@+id/right_move"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="createRight_move"
            android:text="→"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/moveMain"
            android:onClick="moveMain"
            android:layout_alignParentRight="true"/>


    </LinearLayout>
</LinearLayout>